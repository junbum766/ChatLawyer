<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>gpt</title>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <style>
      body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: skyblue;
      }
      h1 {
        font-size: 50px;
        font-weight: 700;
      }
      .container {
        height: 700px;
        width: 1000px;
        overflow-y: auto;
        border: 1px solid black;
        background-color: rgba(255, 255, 255, 0.387);
        border-radius: 20px;
      }
      .line {
        margin-top: 10px;
        display: flex;
      }
      .chat {
        display: flex;
        flex-flow: wrap;
        background-color: rgba(162, 162, 162, 0.472);
        border: 1px solid black;
        padding: 5px;
        max-width: 500px;
        word-break: break-all;
        border-radius: 20px;
        font-size: 20px;
        font-weight: 500;
      }
      .user {
        margin-left: auto;
      }
      .question-submit {
        display: flex;
        align-items: center;
      }
      .question {
        width: 900px;
        background-color: rgb(255, 255, 255);
        font-size: 20px;
        border-radius: 15px;
        padding: 5px;
      }
      button {
        width: 80px;
        height: 40px;
        border-radius: 15px;
      }
    </style>
  </head>
  <body>
    <h1>ChatGPT Service</h1>
    <div class="container"></div>
    <form class="question-submit" name="user-input" onsubmit="return false;">
      <input class="question" type="text" onkeyup="enterkey()" />
      <button type="button" onclick="chat()">Enter</button>
    </form>
    <script>
      // 엔터키가 눌렸을 때도 실행 되도록
      function enterkey() {
        if (window.event.keyCode == 13) {
          console.log("enter키를 누르셨어요.");
          chat();
        }
      }
      // 메인
      function chat() {
        // user input 처리
        let input = document.querySelector(".question");
        let container = document.querySelector(".container");
        let inputSave = input.value;
        let chatBox = `<div class="line">
        <div class="chat user">${inputSave}</div>
      </div>`;
        q = inputSave.trim();
        if (q !== "") {
          container.insertAdjacentHTML("beforeend", chatBox);

          input.value = "";

          // gpt answer 생성
          const form = document.forms["user-input"];

          var inputData = {
            questionData: inputSave,
          };

          axios({
            method: "get",
            url: "/gpt/gptAxios",
            params: inputData,
          }).then((res) => {
            console.log('>>>' ,res.data);
            let gptChatBox = `<div class="line">
                  <div class="chat">${res.data}</div>
                  </div>`;
            container.insertAdjacentHTML("beforeend", gptChatBox);
          });
        }
      }
    </script>
  </body>
</html>
